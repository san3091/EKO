<header>
  <div>
    <%= link_to project_path, class: "project-name" do %>
      <h3><%= @project.name %></h3>
    <% end %>
    <%= link_to 'Projects', projects_path, class: "btn" %>
  </div>
</header>

<main>
  <% @project.phases.each do |phase| %>
      <section>
        <div class="description">
          <h4><%= phase.description %></h4>
        </div>
        <div class="options">
          <%= link_to 'Rename', edit_phase_path(phase.id) %>
          <%= link_to(new_item_path(phase.id)) do %>
            <i class="fa fa-plus-square"></i>
          <% end %>
        </div>
        
          
        <% phase.items.each do |item| %>
          <%= link_to item_path do %>
            <p><%= item.name %></p>
            <p><%= item.description %></p>
            <p><iframe width="260" height="200" src="https://www.youtube.com/embed/<%= item.url %>" frameborder="0" allowfullscreen></iframe></p>
            <p><%= link_to 'Edit', edit_item_path(item.id) %></p>
          <% end %>
          
        <% end %>
        
        <hr>
      </section>

  <% end %>
  <section>
    <%= render 'phases/form' %>
  </section>
</main>
