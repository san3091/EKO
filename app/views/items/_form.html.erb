<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form" id="item-form">
    <div class="field item-field">
      <%= f.text_field :name, class: "transparent text", placeholder: "Name" %>
    </div>
    <div class="field item-field">
      <%= f.text_field :description, class: "transparent text", placeholder: "Description" %>
    </div>
    <div class="field item-field">
      <%= f.text_field :url, class: "transparent text", placeholder: "Youtube URL" %>
    </div>
  </div>
  <div class="field">
    <% if params[:format] %>
      <%= f.hidden_field :phase_id, value: params[:format] %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit 'Submit', class: "submit" %>
  </div>
<% end %>
